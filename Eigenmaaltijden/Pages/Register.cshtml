@page
@model Eigenmaaltijden.Pages.RegisterModel
@{
}


<!-- Login Card -->
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card bg-primary border">
            <div class="card-header bg-primary text-light"><b>Login to Happy Brides</b></div>
            <div class="card-body bg-light">

                <!-- Login Form -->
                <form method="post" asp-page="Register" asp-page-handler="register">
                    <div class="container-fluid col-11 text-secondary">
                        <label for="email_address" style="margin-top: 2%;"><b>Name</b></label>
                        <input type="text" class="form-control" placeholder="John" asp-for="@Model.Name" required autofocus>

                        <label for="email_address" style="margin-top: 2%;"><b>E-mail</b></label>
                        <input type="text" class="form-control" placeholder="John" asp-for="@Model.Email" required autofocus>

                        <label for="password" style="margin-top: 5%;"><b>Password</b></label>
                        <input type="password" class="form-control" placeholder="********" asp-for="@Model.Password" required>

                        <label for="password" style="margin-top: 5%;"><b>Confirm Password</b></label>
                        <input type="password" class="form-control" placeholder="********" asp-for="@Model.ConfirmPassword" required>
                        <br />
                        <label><b>I Accept the <a target="_blank" asp-page="/TOS">Terms Of Service</a></b></label>
                        <input type="checkbox" asp-for="@Model.AcceptedTOS" />
                        <br />
                        <input type="submit" value="Login" class="btn bg-primary text-light" />
                        <p class="text-danger"><b>@Model.ErrorMessage</b></p>


                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
